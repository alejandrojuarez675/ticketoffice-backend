  "components": {
    "securitySchemes": {
      "Authorization": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "UserSignupRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        },
        "required": [
          "username",
          "password",
          "email"
        ]
      },
      "UserLoginRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "username",
          "password"
        ]
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          },
          "expiresIn": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": [
          "token",
          "expiresIn"
        ]
      },
      "CongratsCheckout": {
        "type": "object",
        "properties": {
          "qrCodes": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri",
              "description": "URL to the QR code image",
              "example": "https://www.tuentradaya.com/admin/events/cd85b222-2adf-414d-aa26-6a0fb7c87beb/validate?sale-id=327a6f02-ac6f-49ed-b403-5ccdf9600d88"
            }
          }
        }
      },
      "CreateSessionRequest": {
        "type": "object",
        "properties": {
          "eventId": {
            "type": "string"
          },
          "priceId": {
            "type": "string"
          },
          "quantity": {
            "type": "integer"
          }
        },
        "required": [
          "eventId",
          "priceId",
          "quantity"
        ]
      },
      "SessionCreatedResponse": {
        "type": "object",
        "properties": {
          "sessionId": {
            "type": "string"
          },
          "expiredIn": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": [
          "sessionId",
          "expiredIn"
        ]
      },
      "BuyTicketsRequest": {
        "type": "object",
        "properties": {
          "mainEmail": {
            "type": "string"
          },
          "buyer": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      },
      "SearchResponse": {
        "type": "object",
        "properties": {
          "events": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/EventLightResponse"
            }
          },
          "hasEventsInYourCity": {
            "type": "boolean"
          },
          "totalPages": {
            "type": "integer"
          },
          "currentPage": {
            "type": "integer"
          },
          "pageSize": {
            "type": "integer"
          }
        }
      },
      "EventCrudRequest": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "location": {
            "type": "object"
          },
          "image": {
            "type": "object"
          },
          "tickets": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "description": {
            "type": "string"
          },
          "additionalInfo": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "EventLightResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "location": {
            "type": "string"
          },
          "bannerUrl": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "currency": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        }
      },
      "EventListResponse": {
        "type": "object",
        "properties": {
          "events": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/EventLightResponse"
            }
          }
        }
      },
      "EventDetailPageResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "location": {
            "type": "object"
          },
          "image": {
            "type": "object"
          },
          "tickets": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "description": {
            "type": "string"
          },
          "additionalInfo": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "organizer": {
            "type": "object"
          },
          "status": {
            "type": "string"
          }
        }
      },
      "OrganizerCrudRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "logo": {
            "type": "object"
          }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "role": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "organizer": {
            "type": "object"
          }
        }
      },
      "SalesListResponse": {
        "type": "object",
        "properties": {
          "sales": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      },
      "MailTemplates": {
        "type": "string",
        "enum": [
          "CONFIRMATION_EMAIL_TEMPLATE",
          "SEND_TICKET",
          "WELCOME_USER"
        ]
      },
      "TestEmailRequest": {
        "type": "object",
        "properties": {
          "templateName": {
            "$ref": "#/components/schemas/MailTemplates"
          },
          "to": {
            "type": "string",
            "format": "email"
          },
          "templateData": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          }
        },
        "required": [
          "templateName",
          "to",
          "templateData"
        ]
      },
      "CountryDto": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
          "code",
          "name"
        ]
      },
      "CityDto": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
